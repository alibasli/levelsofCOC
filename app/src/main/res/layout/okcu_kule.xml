                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/okcu10"
                    android:id="@+id/okcu10"
                    android:layout_alignTop="@+id/okcu9"
                    android:layout_toRightOf="@+id/okcu9"
                    android:layout_toEndOf="@+id/okcu9"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/okcu11"
                    android:id="@+id/okcu11"
                    android:layout_alignTop="@+id/okcu10"
                    android:layout_toRightOf="@+id/okcu10"
                    android:layout_toEndOf="@+id/okcu10"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/okcu12"
                    android:id="@+id/okcu12"
                    android:layout_alignTop="@+id/okcu11"
                    android:layout_toRightOf="@+id/okcu11"
                    android:layout_toEndOf="@+id/okcu11"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/okcu13"
                    android:id="@+id/okcu13"
                    android:layout_alignTop="@+id/okcu12"
                    android:layout_toRightOf="@+id/okcu12"
                    android:layout_toEndOf="@+id/okcu12"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/okcu13"
                    android:layout_toRightOf="@+id/okcu13"
                    android:layout_toEndOf="@+id/okcu6"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />


            </RelativeLayout>
        </HorizontalScrollView>
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ads:adSize="SMART_BANNER"
                    ads:adUnitId="@string/banner_ad"
                    android:layout_alignParentBottom="true"
                    />

    </RelativeLayout>
</RelativeLayout>