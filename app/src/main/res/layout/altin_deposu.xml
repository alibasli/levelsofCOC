<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1C0C17"
        >

        <RelativeLayout
            android:id="@+id/acionbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#AAAAAA">
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/backbutton"
                android:background="@drawable/backbutton"
                android:layout_alignTop="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="350dp"
                android:fontFamily="arial"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_height="30dp"
                android:text="Gold Storage"
                android:textColor="#000"

                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_below="@+id/acionbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="#1C0C17"
                >

                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:id="@+id/altindeposu1"
                    android:background="@drawable/altindeposu1"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />



                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu2"
                    android:id="@+id/altindeposu2"
                    android:layout_alignTop="@+id/altindeposu1"
                    android:layout_toRightOf="@+id/altindeposu1"
                    android:layout_toEndOf="@+id/altindeposu1"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu3"
                    android:id="@+id/altindeposu3"
                    android:layout_alignTop="@+id/altindeposu2"
                    android:layout_toRightOf="@+id/altindeposu2"
                    android:layout_toEndOf="@+id/altindeposu2"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu4"
                    android:id="@+id/altindeposu4"
                    android:layout_alignTop="@+id/altindeposu3"
                    android:layout_toRightOf="@+id/altindeposu3"
                    android:layout_toEndOf="@+id/altindeposu3"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu5"
                    android:id="@+id/altindeposu5"
                    android:layout_alignTop="@+id/altindeposu4"
                    android:layout_toRightOf="@+id/altindeposu4"
                    android:layout_toEndOf="@+id/altindeposu4"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu6"
                    android:id="@+id/altindeposu6"
                    android:layout_alignTop="@+id/altindeposu5"
                    android:layout_toRightOf="@+id/altindeposu5"
                    android:layout_toEndOf="@+id/altindeposu5"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu7"
                    android:id="@+id/altindeposu7"
                    android:layout_alignTop="@+id/altindeposu6"
                    android:layout_toRightOf="@+id/altindeposu6"
                    android:layout_toEndOf="@+id/altindeposu6"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu8"
                    android:id="@+id/altindeposu8"
                    android:layout_alignTop="@+id/altindeposu7"
                    android:layout_toRightOf="@+id/altindeposu7"
                    android:layout_toEndOf="@+id/altindeposu7"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu9"
                    android:id="@+id/altindeposu9"
                    android:layout_alignTop="@+id/altindeposu8"
                    android:layout_toRightOf="@+id/altindeposu8"
                    android:layout_toEndOf="@+id/altindeposu8"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu10"
                    android:id="@+id/altindeposu10"
                    android:layout_alignTop="@+id/altindeposu9"
                    android:layout_toRightOf="@+id/altindeposu9"
                    android:layout_toEndOf="@+id/altindeposu9"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />
                <ImageButton
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:background="@drawable/altindeposu11"
                    android:id="@+id/altindeposu11"
                    android:layout_alignTop="@+id/altindeposu10"
                    android:layout_toRightOf="@+id/altindeposu10"
                    android:layout_toEndOf="@+id/altindeposu10"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="200dp"
                    android:layout_alignTop="@+id/altindeposu11"
                    android:layout_toRightOf="@+id/altindeposu11"
                    android:layout_toEndOf="@+id/altindeposu11"
                    android:layout_marginLeft="49dp"
                    android:layout_marginStart="49dp" />


            </RelativeLayout>
        </HorizontalScrollView>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>